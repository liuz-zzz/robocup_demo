<root BTCPP_format="4" >
   <include path="./subtree_cam_find_and_track_ball.xml" />
   <include path="./subtree_find_ball.xml" />
   <include path="./subtree_striker_find_ball.xml" />
   <BehaviorTree ID="StrikerPlay">
      <ReactiveSequence _while="player_role == 'striker'">
         <ReactiveSequence _while="wait_for_opponent_kickoff" name="wait">
            <SubTree ID="CamFindAndTrackBall" _autoremap="true" />
            <SetVelocity />
         </ReactiveSequence>
         <ReactiveSequence _while="!wait_for_opponent_kickoff" name="start">
            <SubTree ID="CamFindAndTrackBall" _autoremap="true" />
            <Sequence>
                  <ReactiveSequence>
                     <SelfLocate mode="trust_direction" />
                     <StrikerDecide decision_out="{decision}" decision_in="{decision}" chase_threshold="1.5" />
                     <SelfLocate mode="trust_direction" />
                     <!-- <SubTree ID="FindBall" _while="decision=='find'" _autoremap="true" /> -->
                     <Fallback _while="decision=='find'">
                        <!-- 首先尝试新的原地旋转找球行为 -->
                        <SubTree ID="StrikerFindBall" _autoremap="true" />
                        <!-- 如果新方法失败，回退到原有的找球策略 -->
                        <SubTree ID="FindBall" _autoremap="true" />
                     </Fallback>
                     <SelfLocate mode="trust_direction" />
                  </ReactiveSequence>
                  <SelfLocate mode="trust_direction" />
                  <!-- <Chase   _while="decision == 'chase'"  vx_limit="1.0"  vy_limit="0.4"  vtheta_limit="1.0"  dist="1.0"/> -->
                  <!-- <Chase1   _while="decision == 'chase'"  vx_limit="2.0"  vy_limit="1.2"  vtheta_limit="2.0"  dist="1.0"/> -->
                  <Speak _while="decision == 'chase'" text="chase"/>
                  <Chase1   _while="decision == 'chase'"  vx_limit="20.5"  vy_limit="10.5"  vtheta_limit="20.5"  dist="1.4"/>
                  <SelfLocate mode="trust_direction" /> 
                  <Speak _while="decision == 'adjust'" text="adjust"/>
                  <!-- <Adjust  _while="decision == 'adjust'"     turn_threshold="0.4" max_range="0.6" min_range="0.4" vx_limit="10.5" vy_limit="10.5" vtheta_limit="10.2"  /> -->
                  <Adjust1  _while="decision == 'adjust'"     turn_threshold="0.4" max_range="0.6" min_range="0.4" vx_limit="10.5" vy_limit="10.5" vtheta_limit="10.2"  />
                  <SelfLocate mode="trust_direction" />
                  <Speak _while="decision == 'kick'" text="kick"/>
                  <Sequence  _while="decision == 'kick'">
                     <!-- <SetVelocity />
                     <Sleep msec="500" /> -->
                     <Kick vx_limit="10.2" vy_limit="10.2" min_msec_kick="1000"/>
                  </Sequence>
            </Sequence>
         </ReactiveSequence>
      </ReactiveSequence>
   </BehaviorTree>
</root>
